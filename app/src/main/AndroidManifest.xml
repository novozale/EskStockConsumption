<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rtsr.eskstockconsumption">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/esk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/esk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_name" />
        <activity android:name=".StockConsumptionActivity" />
        <activity android:name=".SalesOrderList" />
        <activity android:name=".PurchaseOrderList" />
        <activity
            android:name=".SalesOrder"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".ItemPartions"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>